<!--  ./views/index.handlebars -->
<div class="container py-5">

  <div class="row">
    <div class="col-12 col-lg-10 col-xl-8 mx-auto">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">密碼生產器<i class="fas fa-key"></i></h5>
          <hr>
          <form method="POST" action="/">
            <div class="form-group form-row">
              <label for="length" class="col-md-4 col-form-label">
                密碼長度
              </label>
              <div class="col-md-8">
                <input type="number" name="length" class="form-control" id="length" min="4" max="16" value="{{options.length}}">
                <small class="text-muted form-text">長度介於 4 ~ 16 之間</small>
              </div>
            </div>

            <div class="form-group form-row mb-2 align-items-center">
              <label for="lowercase" class="col-md-4 col-form-label">包括小寫英文字母</label>
              <div class="col-md-8">
                <div class="custom-control custom-checkbox">
                  <input type="checkbox" class="custom-control-input" id="lowercase" name="lowercase" {{#if options.lowercase}}checked{{/if}}>
                  <label class="custom-control-label" for="lowercase">(例如: abcdefg)</label>
                </div>
              </div>
            </div>

            <div class="form-group form-row mb-2 align-items-center">
              <label for="uppercase" class="col-md-4 col-form-label">包括大寫英文字母</label>
              <div class="col-md-8">
                <div class="custom-control custom-checkbox">
                  <input type="checkbox" class="custom-control-input" id="uppercase" name="uppercase" {{#if options.uppercase}}checked{{/if}}>
                  <label class="custom-control-label" for="uppercase">(例如: ABCDEFG)</label>
                </div>
              </div>
            </div>

            <div class="form-group form-row mb-2 align-items-center">
              <label for="numbers" class="col-md-4 col-form-label">包括 0~9 的號碼</label>
              <div class="col-md-8">
                <div class="custom-control custom-checkbox">
                  <input type="checkbox" class="custom-control-input" id="numbers" name="numbers" {{#if options.numbers}}checked{{/if}}>
                  <label class="custom-control-label" for="numbers">(例如: 123456)</label>
                </div>
              </div>
            </div>

            <div class="form-group form-row mb-2 align-items-center">
              <label for="symbols" class="col-md-4 col-form-label">包括特殊符號</label>
              <div class="col-md-8">
                <div class="custom-control custom-checkbox">
                  <input type="checkbox" class="custom-control-input" id="symbols" name="symbols" {{#if options.symbols}}checked{{/if}}>
                  <label class="custom-control-label" for="symbols">(例如: @#$%)</label>
                </div>
              </div>
            </div>

            <div class="form-group form-row">
              <label for="exclude-characters" class="col-md-4 col-form-label">
                不想要的字元
              </label>
              <div class="col-md-8">
                <input type="text" name="excludeCharacters" class="form-control" id="exclude-characters" value="{{options.excludeCharacters}}">
                <small class="text-muted form-text">這些字元不會出現在密碼裡</small>
              </div>
            </div>

            {{!-- show password --}}
            {{#if password}}
            <div class="alert alert-info" role="alert">
              <span class="mr-2">你的密碼:</span> <code>{{password}}</code>
            </div>
            {{/if}}

            <button class="btn btn-success" type="submit">產出密碼</button>
          </form>
        </div>

        <small class="card-footer text-muted text-right">
          Idea is inspired by <a href="https://passwordsgenerator.net/" target="_blank">Strong Random Password</a>
        </small>
      </div>
    </div>
  </div>
</div>